<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FAFAFA"
    android:orientation="vertical">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--MAIN LAYOUT-->
            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.core.widget.NestedScrollView
                        android:id="@+id/nested_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusableInTouchMode="true"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    android:contentDescription="@null"
                                    android:gravity="center_vertical"
                                    android:maxHeight="150dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/paramount_header" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <TextView
                                    android:id="@+id/btn_view_history"
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@drawable/btn_paramount_rounded_sides"
                                    android:elevation="4dp"
                                    android:gravity="center"
                                    android:text="VIEW HISTORY"
                                    android:textColor="@color/whitePrimary"
                                    android:textSize="16sp"
                                    android:textAppearance="@style/roboto.bold"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="@string/string_select_policty_type"
                                    android:textAllCaps="true"
                                    android:textColor="@color/color_4A90E2"
                                    android:textSize="20sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:text="Term Condition*"
                                        android:textColor="@color/colorsilver"
                                        tools:ignore="TooDeepLayout" />

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            android:id="@+id/edtRenewal"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/border"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:inputType="text"
                                            android:padding="10dp"
                                            android:textColor="@color/colorTextGrey"
                                            android:textSize="16sp" />

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="bottom|end"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginRight="10dp"
                                            android:contentDescription="@null"
                                            android:rotation="180"
                                            android:scaleType="fitCenter"
                                            app:srcCompat="@drawable/ic_arrow_up_757575" />

                                    </FrameLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:text="@string/string_policty_type"
                                        android:textColor="@color/colorsilver"
                                        tools:ignore="TooDeepLayout" />

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            android:id="@+id/edtPolicyType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/border"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:inputType="text"
                                            android:padding="10dp"
                                            android:textColor="@color/colorTextGrey"
                                            android:textSize="16sp" />

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="bottom|end"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginRight="10dp"
                                            android:contentDescription="@null"
                                            android:rotation="180"
                                            android:scaleType="fitCenter"
                                            app:srcCompat="@drawable/ic_arrow_up_757575" />

                                    </FrameLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:text="@string/string_lto_mv_type"
                                        android:textColor="@color/colorsilver"
                                        tools:ignore="TooDeepLayout" />

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <EditText
                                            android:id="@+id/edtLtoMvType"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/border"
                                            android:focusable="false"
                                            android:focusableInTouchMode="false"
                                            android:inputType="text"
                                            android:padding="10dp"
                                            android:textColor="@color/colorTextGrey"
                                            android:textSize="16sp" />

                                        <ImageView
                                            android:layout_width="10dp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="bottom|end"
                                            android:layout_marginEnd="10dp"
                                            android:layout_marginRight="10dp"
                                            android:contentDescription="@null"
                                            android:rotation="180"
                                            android:scaleType="fitCenter"
                                            app:srcCompat="@drawable/ic_arrow_up_757575" />

                                    </FrameLayout>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:text="@string/string_total_premium"
                                    android:textColor="@color/color_646464" />

                                <TextView
                                    android:id="@+id/txvAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:gravity="center_vertical|end"
                                    android:text="00.00"
                                    android:textColor="@color/color_4A90E2"
                                    android:textSize="32sp" />

                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="bottom">

                                <Button
                                    android:id="@+id/btnNext"
                                    style="?android:attr/borderlessButtonStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/color_0160B0"
                                    android:text="@string/string_next"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorwhite"
                                    android:textSize="18sp" />

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.core.widget.NestedScrollView>

                </androidx.coordinatorlayout.widget.CoordinatorLayout>

            </LinearLayout>

            <!--Layout for no connection -->
            <RelativeLayout
                android:id="@+id/nointernetconnection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorwhite"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/nointernet" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView1"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:padding="30dp"
                    android:text="Opps! It looks like you're not connected. Please check your internet connection."
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/refreshnointernet"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/textView2"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:src="@drawable/refresh4" />

                <ImageView
                    android:id="@+id/refreshdisabled1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_below="@id/textView2"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:src="@drawable/refreshdisabled"
                    android:visibility="gone" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="8dp"
                    android:src="@drawable/logowatermark" />
            </RelativeLayout>

            <include layout="@layout/loader" />

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>