<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingTop="@dimen/_20sdp"
                        android:paddingRight="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_20sdp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_fairchild_intro"
                            android:textAppearance="@style/roboto.bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_12sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/str_fairchild_instructions"
                            android:textAppearance="@style/roboto.regular"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>

                    <!--<TextView-->
                    <!--android:id="@+id/txv_fairchild_note"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:paddingLeft="@dimen/_20sdp"-->
                    <!--android:paddingRight="@dimen/_20sdp"-->
                    <!--android:paddingBottom="@dimen/_10sdp"-->
                    <!--android:text="@string/str_fairchild_note"-->
                    <!--android:textAppearance="@style/roboto.regular"-->
                    <!--android:textSize="@dimen/_12ssp"/>-->
                    <!--</RelativeLayout>-->

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/_30sdp"
                android:background="@drawable/button"
                android:padding="@dimen/_11sdp">

                <TextView
                    android:id="@+id/btn_fairchild_vote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="VOTE"
                    android:textAppearance="@style/roboto.bold"
                    android:textColor="@color/whitePrimary"
                    android:textSize="@dimen/_22ssp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>