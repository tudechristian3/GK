<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom_item"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:paddingEnd="30dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingStart="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/goodkredit_logo" />

            <TextView
                android:id="@+id/txvBilling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:paddingBottom="15dp"
                android:text="SAMPLE TEXT HERE"
                android:textColor="@color/color_555657"
                android:textSize="24sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_marginTop="-15dp"
                android:paddingEnd="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingStart="20dp"
                android:text="SAMPLE TEXT HERE"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginEnd="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_btn_view_show_payment_channels"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txvShowPaymentChannels"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:paddingEnd="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingStart="20dp"
                    android:text="SHOW PAYMENT CHANNELS"
                    android:textColor="@color/colorwhite"
                    android:textSize="14sp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_1683DB"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/payment_channels_border_white_halo"
                android:orientation="vertical"
                android:paddingEnd="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingStart="15dp">

                <TextView
                    android:id="@+id/txvTotalAmountLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:paddingTop="5dp"
                    android:text="TOTAL AMOUNT"
                    android:textColor="@color/color_96C9EF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txvTotalAmountValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="10dp"
                    android:text="100,000.00"
                    android:textColor="@color/colorwhite"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/payment_channels_border_white_halo"
                android:orientation="vertical"
                android:paddingEnd="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingStart="15dp">

                <TextView
                    android:id="@+id/txvBillingNumberLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:paddingTop="5dp"
                    android:text="BILLING REFERENCE #"
                    android:textColor="@color/color_96C9EF"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txvBillingNumberValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="10dp"
                    android:text="098190298312"
                    android:textColor="@color/colorwhite"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/barcodeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/linearLayoutVPager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/leftLayout"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:paddingEnd="0dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="0dp"
                        android:paddingStart="4dp"
                        android:paddingTop="16dp">

                        <ImageView
                            android:id="@+id/left"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/barcode_pager_arrow" />

                    </RelativeLayout>

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/leftLayout"
                        android:layout_toLeftOf="@+id/rightLayout"
                        android:layout_toRightOf="@+id/leftLayout"
                        android:layout_toStartOf="@+id/rightLayout"
                        android:gravity="center"
                        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

                    <RelativeLayout
                        android:id="@+id/rightLayout"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:paddingEnd="0dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="0dp"
                        android:paddingStart="4dp"
                        android:paddingTop="16dp">

                        <ImageView
                            android:id="@+id/right"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_centerVertical="true"
                            android:rotation="180"
                            android:src="@drawable/barcode_pager_arrow" />

                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/whitebarcodeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayoutVPager"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-4dp"
                    android:textColor="@color/colorwhite"
                    android:textSize="20sp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>


