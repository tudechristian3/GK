<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >

            <RadioButton
                android:id="@+id/rb_membership"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:text="MIGS (Member in Good Standing): \n Php 4500 + PMES"
                android:textAppearance="@style/roboto.regular"
                android:textColor="@color/colorTextGrey"
                android:textSize="16sp"
                app:buttonTint="@color/coopassist_green" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/txv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. A Minimum share capital Php 4,000"
                android:textAppearance="@style/roboto.regular"
                android:textColor="@color/colorTextGrey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txv_descriptionnote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/roboto.regular"
                android:textColor="@color/colordarkgrey"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/notes_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="35dp">

            <TextView
                android:id="@+id/txv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Note:"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/colorTextGrey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txv_notecontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A transaction fee"
                android:textAppearance="@style/roboto.regular"
                android:textColor="@color/colorsilver"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>