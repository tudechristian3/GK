<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/imv_school_logo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imv_school_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="150dp"
                    android:minHeight="100dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/school_menu_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLineDivider" />

                <LinearLayout
                    android:id="@+id/btn_grades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_grades" />

                    <TextView
                        android:id="@+id/txv_grades"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:textAppearance="@style/roboto.regular"
                        android:textColor="@color/color_474444"
                        android:textSize="18sp" />

                </LinearLayout>


                <View
                    android:id="@+id/btn_grades_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLineDivider" />

                <LinearLayout
                    android:id="@+id/btn_tuition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_tuition_fee_balance" />

                    <TextView
                        android:id="@+id/txv_tuitionfee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:textAppearance="@style/roboto.regular"
                        android:textColor="@color/color_474444"
                        android:textSize="18sp" />

                </LinearLayout>


                <View
                    android:id="@+id/btn_tuition_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLineDivider" />

                <LinearLayout
                    android:id="@+id/btn_bulletin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_bulletin" />

                    <TextView
                        android:id="@+id/txv_bulletin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:textAppearance="@style/roboto.regular"
                        android:textColor="@color/color_474444"
                        android:textSize="18sp" />

                </LinearLayout>

                <View
                    android:id="@+id/btn_bulletin_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLineDivider" />


                <LinearLayout
                    android:id="@+id/btn_inbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_inbox" />

                    <TextView
                        android:id="@+id/txv_support"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:textAppearance="@style/roboto.regular"
                        android:textColor="@color/color_474444"
                        android:textSize="18sp" />

                </LinearLayout>

                <View
                    android:id="@+id/btn_support_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLineDivider" />

                <LinearLayout
                    android:id="@+id/btn_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_schoolprofile" />

                    <TextView
                        android:id="@+id/txv_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:textAppearance="@style/roboto.regular"
                        android:textColor="@color/color_474444"
                        android:textSize="18sp" />

                </LinearLayout>

                <View
                    android:id="@+id/btn_profile_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLineDivider" />

                <LinearLayout
                    android:id="@+id/btn_dtr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_schooldtr" />

                    <TextView
                        android:id="@+id/txv_dtr"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:textAppearance="@style/roboto.regular"
                        android:textColor="@color/color_474444"
                        android:textSize="18sp" />

                </LinearLayout>

                <View
                    android:id="@+id/btn_dtr_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLineDivider" />

            </LinearLayout>



        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/global_layout_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_body"
        />


</RelativeLayout>