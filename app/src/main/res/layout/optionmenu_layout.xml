<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorblack"
            android:background="#1DD8D5D5"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Options"
            android:gravity="center" />

            <LinearLayout
                android:id="@+id/linearSortVoucherLayout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="3dp"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:gravity="center"
                    android:paddingRight="3dp"
                    android:tint="@color/colorTextGrey"
                    android:src="@drawable/voucher_img_sort" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="3dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Sort Voucher"
                    android:textAllCaps="true"
                    android:textAppearance="@style/roboto.bold"
                    android:textSize="@dimen/_8sdp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="0.5dp"
                android:background="@color/quantum_black_divider"/>
            <LinearLayout
                android:id="@+id/linearViewVoucherLayout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:clickable="true"
                android:padding="3dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <ImageView
                    android:visibility="gone"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_9sdp"
                    android:paddingRight="3dp"
                    android:tint="@color/colorTextGrey"
                    android:src="@drawable/voucher_img_view" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:textStyle="bold"
                    android:text="View Summary"
                    android:textAllCaps="true"
                    android:textAppearance="@style/roboto.bold"
                    android:textSize="@dimen/_8sdp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="0.5dp"
                android:background="@color/quantum_black_divider"/>
        <LinearLayout
            android:id="@+id/linearCloseDialogLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:visibility="gone"
                android:layout_width="@dimen/_9sdp"
                android:layout_height="@dimen/_9sdp"
                android:paddingRight="3dp"
                android:tint="@color/mdtp_red_focused"
                android:src="@drawable/ic_close_icon_round" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:gravity="center"
                android:text="Close"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textAppearance="@style/roboto.bold"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>