<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:longClickable="false"
    android:orientation="vertical"
    android:id="@+id/adLink"
    android:paddingLeft="@dimen/_15sdp"
    android:paddingRight="@dimen/_15sdp">

  <ImageView
      android:layout_gravity="top|center_vertical"
      android:id="@+id/imgV_ad_image"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_160sdp"
      android:contentDescription="@null"
      android:scaleType="fitCenter" />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/_10sdp" />

  <TextView
      android:id="@+id/tv_ad_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:gravity="start|left"
      android:maxLines="2"
      android:textAppearance="@style/roboto.bold"
      android:textColor="#707170"
      android:textSize="@dimen/_14sdp" />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/_8sdp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/tv_ad_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="start|left"
          android:textAppearance="@style/roboto.regular"
          android:textColor="#707170"
          android:textSize="@dimen/_11sdp" />

    </ScrollView>

</LinearLayout>