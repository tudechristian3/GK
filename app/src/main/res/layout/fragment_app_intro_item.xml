<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fafafa"
    >

    <!--HEADER-->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/tabcolor"
        android:minHeight="175dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="15dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside"
                android:src="@drawable/logo_login" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/borderless_voucher" />

        </RelativeLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/appIntroInfoGraphic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:background="@color/color_qt_silver"
        android:src="@drawable/newqt1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/appIntroDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|start"
            android:padding="5dp"
            android:text="MENU"
            android:textAppearance="@style/roboto.regular"
            android:textColor="@color/colorTextGrey"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/appIntroDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|start"
            android:padding="5dp"
            android:text="Tap on the icon to explore the menu."
            android:textAppearance="@style/roboto.regular"
            android:textColor="@color/color_676767"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>