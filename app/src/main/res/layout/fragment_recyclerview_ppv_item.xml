<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorwhite"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ppvImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorblack"
            android:contentDescription="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/ppvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="GAME OF THRONES"
                android:textColor="@color/color_4A494A"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/ppvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="This is a sample description. This is a sample description. This is a sample description."
                android:textColor="@color/color_4A494A"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/ppvDescriptionMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="3"
                android:ellipsize="end"
                android:visibility="gone"
                android:text="See More"
                android:textColor="@color/color_4A494A"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txvShowingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="Valid from April 01, 2018 to April 30, 2018."
                android:textColor="@color/color_4A494A"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ppvAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:text="Php 350.00"
                    android:textColor="@color/color_4A494A"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ppvSubscribe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:text="SUBSCRIBE"
                    android:textColor="@color/color_498FE1"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
