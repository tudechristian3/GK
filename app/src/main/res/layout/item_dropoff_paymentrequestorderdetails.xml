<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_pr_itemlogo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/gk_store_offline"
            android:padding="5dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_blackoutline"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ITEM ID:"
                        android:layout_alignParentRight="true"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/_11sdp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/txv_pr_itemid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MDP84303yhf9"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/_11sdp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ITEM NAME:"
                        android:layout_alignParentRight="true"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/_11sdp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/txv_pr_itemname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MDP84303yhf9"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/_11sdp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO OF ITEM/S:"
                        android:layout_alignParentRight="true"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/_11sdp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/txv_pr_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MDP84303yhf9"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/_11sdp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ITEM AMT:"
                        android:layout_alignParentRight="true"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/_11sdp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/txv_pr_itemamount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MDP84303yhf9"
                        android:paddingLeft="5dp"
                        android:textSize="@dimen/_11sdp"/>

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>