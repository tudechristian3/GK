<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardBackgroundColor="@color/whitePrimary"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|right"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:textAppearance="@style/roboto.regular"
            android:textColor="#9D9D9D"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|left"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:textAppearance="@style/roboto.bold"
            android:textColor="#707170"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_ad_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start|left"
            android:maxLines="3"
            android:minLines="3"
            android:padding="5dp"
            android:textAppearance="@style/roboto.regular"
            android:textColor="#707170"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start|left"
            android:padding="5dp"
            android:textAppearance="@style/roboto.regular"
            android:textColor="#9D9D9D"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>