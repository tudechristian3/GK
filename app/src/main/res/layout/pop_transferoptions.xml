<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colortoolbar"
        android:id="@+id/optionswrap"
        >


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/options"
            android:background="@color/colorwhite"
            android:padding="20dp"
            >


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginTop="20sp"
                android:padding="5dp"
                android:id="@+id/transferSMS">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer Thru SMS"
                    android:id="@+id/Airtime"
                    android:textSize="20sp"
                    android:paddingTop="12dp"
                    android:gravity="left"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sms"
                    android:gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="5dp"
                android:layout_marginTop="10sp"
                android:id="@+id/transferEMAIL">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer Thru Email"
                    android:textSize="20sp"
                    android:paddingTop="12dp"
                    android:gravity="left"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/email"
                    android:gravity="left"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="5dp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20dp"
                android:id="@+id/transferBorrower">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer to a Subscriber"
                    android:textSize="20sp"
                    android:paddingTop="12dp"
                    android:gravity="left"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/borrower"
                    android:gravity="left"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>