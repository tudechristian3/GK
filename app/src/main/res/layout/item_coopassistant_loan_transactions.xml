<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_3sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.1">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/txv_coop_loantype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Regular Loan"
                android:textColor="@color/coopassist_gray3"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txv_coop_membername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Christian Darius O. Zafra"
                    android:layout_weight="0.35"
                    android:textStyle="bold"
                    android:textColor="@color/coopassist_green"/>

                <TextView
                    android:id="@+id/txv_coop_loanamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="500.00"
                    android:layout_weight="0.65"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txv_coop_datetimerequested"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feb. 22, 2019 02:15 PM"
                    android:layout_weight="0.35"
                    android:textColor="@color/coopassist_gray3"/>

                <TextView
                    android:id="@+id/txv_coop_loanstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:text="DECLINED"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:src="@mipmap/arrow2"
            android:paddingRight="@dimen/_5sdp"/>

    </LinearLayout>

    <!--<View-->
        <!--android:id="@+id/view_rfid_active"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.8dp"-->
        <!--android:background="@color/text_darkgray"-->
        <!--android:layout_margin="@dimen/_5sdp"/>-->

</LinearLayout>