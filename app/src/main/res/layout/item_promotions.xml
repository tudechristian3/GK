<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|left"
            android:padding="10dp"
            android:textAppearance="@style/roboto.bold"
            android:textColor="#707170"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imgV_ad_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/gkstore_banner_default" />

        <TextView
            android:id="@+id/tv_ad_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start|left"
            android:maxLines="2"
            android:minLines="2"
            android:padding="10dp"
            android:textAppearance="@style/roboto.regular"
            android:textColor="#707170"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start|left"
            android:padding="10dp"
            android:textAppearance="@style/roboto.regular"
            android:textColor="#9D9D9D"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>