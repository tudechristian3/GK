<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_mdp_darkblue">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:src="@drawable/mdp_logo_name"
                android:padding="12dp"
                android:background="@color/whitePrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="@dimen/_20sdp">

                <RelativeLayout
                    android:id="@+id/layout_mdp_pendingorders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_mdp_pendingrequest1"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:background="@drawable/bg_mdp_circle_lightblue"/>
                        <ImageView
                            android:id="@+id/img_mdp_pendingrequest2"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:src="@drawable/ic_mdp_pendingorders"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/mdp_pendingorders_count"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:textSize="@dimen/_20sdp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/whitePrimary"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REQUESTS"
                        android:textColor="@color/whitePrimary"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_70sdp"
                        android:textSize="@dimen/_15sdp"/>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_mdp_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:background="@drawable/bg_mdp_circle_white"
                        android:src="@drawable/ic_mdp_store"
                        android:padding="@dimen/_12sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MDP STORE"
                        android:textColor="@color/whitePrimary"
                        android:textSize="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/_25sdp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_mdp_bulletin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:background="@drawable/bg_mdp_circle_white"
                        android:src="@drawable/ic_mdp_bulletin"
                        android:padding="@dimen/_12sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BULLETIN"
                        android:textColor="@color/whitePrimary"
                        android:paddingLeft="@dimen/_25sdp"
                        android:textSize="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_mdp_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:background="@drawable/bg_mdp_circle_white"
                        android:src="@drawable/ic_mdp_support"
                        android:padding="@dimen/_12sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUPPORT"
                        android:textColor="@color/whitePrimary"
                        android:paddingLeft="@dimen/_25sdp"
                        android:textSize="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>