<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/colorwhite"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/layout_bulletin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/roboto.bold"
            android:textColor="@color/color_212121"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/roboto.regular"
            android:textColor="@color/colorsilver"
            android:textSize="14sp" />

        <at.blogc.android.views.ExpandableTextView
            android:id="@+id/txv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:textAppearance="@style/roboto.regular"
            android:textColor="@color/colorTextGrey"
            android:textSize="16sp"
            app:animation_duration="750" />

        <TextView
            android:id="@+id/btnshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:padding="5dp"
            android:text="Show More..."
            android:textColor="@color/colorsilver"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txv_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:textAppearance="@style/roboto.regular"
            android:textColor="@color/colorTextGrey"
            android:textSize="16sp"
            android:autoLink="web"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imv_bulletin_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:minHeight="200dp" />

    </LinearLayout>


</LinearLayout>