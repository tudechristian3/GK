<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/request_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_lightgray_gradient"
    android:visibility="gone">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/shadow_box_no_border"
        android:orientation="vertical">

        <View
            android:id="@+id/view_header_status"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/coopassist_request_blue"
            android:clickable="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txv_header_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/colorTextGrey" />

            <TextView
                android:id="@+id/txv_description_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:minHeight="60dp"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/colorTextGrey" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>