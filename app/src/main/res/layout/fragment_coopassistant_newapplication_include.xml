<!--Gender and Birthdate-->
<LinearLayout
    android:id="@+id/selection_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/gender_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:text="Gender*"
            android:textAppearance="@style/roboto.bold"
            android:textColor="@color/color_418E6B"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spn_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:minHeight="40dp"
            android:singleLine="true"
            android:textColor="@color/colorTextGrey"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/birthdate_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="4dp"
            android:text="Birth Date*"
            android:textAppearance="@style/roboto.bold"
            android:textColor="@color/color_418E6B"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txv_cal_birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif"
            android:minHeight="40dp"
            android:padding="10dp"
            android:singleLine="true"
            android:textAppearance="@style/roboto.regular"
            android:textColor="@color/colorTextGrey"

            android:textSize="15sp" />


    </LinearLayout>


</LinearLayout>

