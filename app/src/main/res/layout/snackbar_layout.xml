<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF0000"
    android:id="@+id/snackbar_parent"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/snackbar_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_error_outline_white_48dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_alignParentStart="true"
        />
    <TextView
        android:id="@+id/snackbar_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/snackbar_img"
        android:layout_toEndOf="@id/snackbar_img"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:layout_marginLeft="2dp"
        android:layout_alignParentEnd="true"
        style="@style/TextAppearance.AppCompat.Title"

        android:textColor="@color/quantum_white_text"/>

</RelativeLayout>