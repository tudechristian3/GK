<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitePrimary"
    android:visibility="gone"
    android:id="@+id/layout_rfid_not_connected">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:src="@drawable/rfid_hand"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introducing GK RFID!"
            android:gravity="center"
            android:textSize="@dimen/_19ssp"
            android:textStyle="bold"
            android:padding="@dimen/_5sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A specially designed card for your GoodKredit payments. GK RFID lets you tap and go to make payments in the absence of your GoodKredit app. A seamless connection with your GoodKredit account, this card acts as a simple trigger that allows GoodKredit voucher payments right in a snap!"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_20sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*The use of GK RFID card works only to specific networks of GoodKredit Sponsors and Merchants. Please ask your Sponsor about this or message us to know more."
            android:textSize="@dimen/_12ssp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:textStyle="italic"
            android:paddingBottom="@dimen/_20sdp"/>

    </LinearLayout>



</RelativeLayout>