<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name*"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/coopassist_green"/>

        <EditText
            android:id="@+id/edt_coop_refer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:inputType="text"
            android:maxLines="1"
            android:padding="@dimen/_8sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile No.*"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/coopassist_green"/>

        <EditText
            android:id="@+id/edt_coop_refer_mobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="@dimen/_8sdp"
            android:maxLines="1"
            android:maxLength="13"
            android:inputType="phone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address*"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/coopassist_green"/>

        <EditText
            android:id="@+id/edt_coop_refer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="@dimen/_8sdp"
            android:maxLines="1"
            android:inputType="textEmailAddress"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/coopassist_green"/>

        <EditText
            android:id="@+id/edt_coop_refer_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="@dimen/_8sdp"
            android:maxLines="1"
            android:inputType="text"/>


        <Button
            android:id="@+id/btn_coopassistant_refer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="REFER"
            android:textColor="@color/whitePrimary"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_50sdp"/>
    </LinearLayout>



</ScrollView>