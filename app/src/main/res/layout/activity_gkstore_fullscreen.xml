<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.goodkredit.myapplication.activities.gkstore.GKStoreFullScreenActivity">


    <!--<FrameLayout-->
        <!--android:id="@+id/outsidecontainer"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@color/mdtp_transparent_black"-->
        <!--&gt;-->

    <!--</FrameLayout>-->

    <LinearLayout
        android:id="@+id/cancelbtncontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/cancelbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_close_grey600_24dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/prodDetail_custom_indicator2"
            style="@style/AndroidImageSlider_Corner_Oval_Orange"
            android:layout_marginBottom="10dp" />

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/productmultiimagesslider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:gravity="center" />

    </LinearLayout>


</RelativeLayout>
