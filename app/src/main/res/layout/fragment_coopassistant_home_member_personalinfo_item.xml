<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_itemscontainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:padding="0.5dp">

            <com.goodkredit.myapplication.utilities.PercentageCropImageView
                android:id="@+id/imv_logo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/votes_outline_picture"
                android:scaleType="matrix" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/txv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Christian Darius O. Zafra"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/coopassist_green"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center"
                    android:layout_weight="0.2"
                    android:contentDescription="@null"
                    android:paddingLeft="3dp"
                    android:paddingTop="9dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="3dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/txv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:padding="5dp"
                    android:text="Brgy. Kamputhaw, Cebu City"
                    android:textAppearance="@style/roboto.regular"
                    android:textColor="@color/coopassist_gray3"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center"
                    android:layout_weight="0.2"
                    android:contentDescription="@null"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="4dp"
                    android:src="@drawable/ic_contact" />

                <TextView
                    android:id="@+id/txv_mobileno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="0917 7111 0671"
                    android:textAppearance="@style/roboto.regular"
                    android:textColor="@color/coopassist_gray3"
                    android:textSize="14sp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/imv_arrow_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="end|center|center_vertical"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imv_arrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_chevron_right" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>