<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_itemscontainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/txv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Christian Darius O. Zafra"
                android:textAppearance="@style/roboto.bold"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/coopassist_gray3" />

            <TextView
                android:id="@+id/txv_amount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="P 20, 102.00"
                android:textAppearance="@style/roboto.regular"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/coopassist_green" />

            <TextView
                android:id="@+id/txv_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="As of 07/20/2019"
                android:textAppearance="@style/roboto.regular"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/coopassist_gray4" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_add_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:visibility="visible"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_4A90E2"
                android:gravity="center"
                android:padding="15dp"
                android:text="ADD"
                android:textAllCaps="true"
                android:textAppearance="@style/roboto.regular"
                android:textColor="@color/whitePrimary" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>