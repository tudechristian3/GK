<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_grey600_24dp"
            android:padding="10dp"
            android:layout_gravity="right"/>

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/gkearn_register"
            android:layout_gravity="center"/>

        <LinearLayout
            android:id="@+id/layout_referralcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REFERRAL CODE"
                android:layout_gravity="center"
                android:textColor="@color/colorblack"/>

            <TextView
                android:id="@+id/txv_referralcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_gray_box"
                android:gravity="center"
                android:minWidth="200dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/btn_customize_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="@string/referafriendcustom"
                android:textSize="12sp"
                android:textColor="@color/colorblack"/>

        </LinearLayout>


        <TextView
            android:id="@+id/txv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:id="@+id/btn_inviteafriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_gkearn_blue"
                android:padding="12dp"
                android:layout_gravity="center"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INVITE A FRIEND"
                    android:minWidth="@dimen/_200sdp"
                    android:gravity="center"
                    android:textColor="@color/whitePrimary"/>

            </LinearLayout>

            <TextView
                android:id="@+id/txv_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textSize="15sp"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>