<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <me.himanshusoni.chatmessageview.ChatMessageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chatMessageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cmv_arrowGravity="start"
        app:cmv_arrowMargin="3dp"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="#E5E5EA"
        app:cmv_backgroundColorPressed="#AAE5E5EA"
        app:cmv_contentPadding="5dp"
        app:cmv_cornerRadius="10dp"
        app:cmv_showArrow="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="220dp"
                android:textSize="15dp" />


            <ImageView
                android:id="@+id/image"
                android:layout_width="150dp"
                android:layout_height="175dp"
                android:contentDescription="@null"
                android:visibility="gone" />
        </LinearLayout>

    </me.himanshusoni.chatmessageview.ChatMessageView>

    <TextView
        android:id="@+id/messageDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:maxWidth="220dp"
        android:textColor="@color/colordarkgrey"
        android:textSize="12dp" />
</LinearLayout>