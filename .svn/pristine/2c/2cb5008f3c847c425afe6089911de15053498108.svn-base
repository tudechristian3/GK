<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyMaterialTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colortoolbar"
            app:popupTheme="@style/MyMaterialTheme.PopupOverlay">

            <LinearLayout
                android:id="@+id/proceedcontainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/proceedtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="CONFIRM"
                    android:textAppearance="@style/roboto.bold"
                    android:textColor="@color/colorwhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/arrowright">

                </ImageView>


            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/maincontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_email_hint_icon"
                    android:tint="@color/color_AEAEAE" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/string_paramount_confirm_hint"
                    android:textSize="12sp" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Student Information"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/color_055C84"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitePrimary"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/personalinformationcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Student ID"
                            android:textAppearance="@style/roboto.regular"
                            android:textSize="14sp"
                            android:textColor="@color/color_878787" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text=":"
                            android:textSize="14sp"
                            android:textColor="@color/text_lightgray" />

                        <TextView
                            android:id="@+id/txv_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textAppearance="@style/roboto.regular"
                            android:textColor="@color/colorTextGrey" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Name"
                            android:textAppearance="@style/roboto.regular"
                            android:textSize="14sp"
                            android:textColor="@color/color_878787" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text=":"
                            android:textSize="14sp"
                            android:textColor="@color/text_lightgray" />

                        <TextView
                            android:id="@+id/txv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="@style/roboto.regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextGrey" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Mobile Number"
                            android:textAppearance="@style/roboto.regular"
                            android:textSize="14sp"
                            android:textColor="@color/color_878787" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text=":"
                            android:textSize="14sp"
                            android:textColor="@color/text_lightgray" />

                        <TextView
                            android:id="@+id/txv_mobilenumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="@style/roboto.regular"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextGrey" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Email Address"
                            android:textSize="14sp"
                            android:textAppearance="@style/roboto.regular"
                            android:textColor="@color/color_878787" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text=":"
                            android:textSize="14sp"
                            android:textColor="@color/text_lightgray" />

                        <TextView
                            android:id="@+id/txv_emailaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textSize="14sp"
                            android:textAppearance="@style/roboto.regular"
                            android:textColor="@color/colorTextGrey" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="Payment Details"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/colortoolbar"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whitePrimary"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/paymentdetailscontainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/txv_schoolyear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:paddingEnd="10dp"
                        android:paddingRight="10dp"
                        android:text="School Year"
                        android:textAppearance="@style/roboto.regular"
                        android:textColor="@color/colorTextGrey" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLineDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/txv_semester"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="2nd Semester"
                            android:textAppearance="@style/roboto.regular"
                            android:textColor="@color/colorTextGrey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Total Semestral Fee"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingEnd="5dp"
                                android:textSize="14sp"
                                android:textAppearance="@style/roboto.regular"
                                android:textColor="@color/color_878787" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:gravity="center"
                                android:text=":"
                                android:textSize="14sp"
                                android:textColor="@color/text_lightgray" />

                            <TextView
                                android:id="@+id/txv_totalsemfee"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:textAppearance="@style/roboto.regular"
                                android:textSize="14sp"
                                android:textColor="@color/colorTextGrey" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Amount Paid"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingEnd="5dp"
                                android:textAppearance="@style/roboto.regular"
                                android:textSize="14sp"
                                android:textColor="@color/color_878787" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:gravity="center"
                                android:text=":"
                                android:textSize="14sp"
                                android:textColor="@color/text_lightgray" />

                            <TextView
                                android:id="@+id/txv_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:textAppearance="@style/roboto.regular"
                                android:textSize="14sp"
                                android:textColor="@color/colorTextGrey" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Service Charge"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingEnd="5dp"
                                android:textSize="14sp"
                                android:textAppearance="@style/roboto.regular"
                                android:textColor="@color/color_878787" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:gravity="center"
                                android:text=":"
                                android:textSize="14sp"
                                android:textColor="@color/text_lightgray" />

                            <TextView
                                android:id="@+id/txv_servicecharge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:textAppearance="@style/roboto.regular"
                                android:textSize="14sp"
                                android:textColor="@color/colorTextGrey" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Discount"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingEnd="5dp"
                                android:textSize="14sp"
                                android:textAppearance="@style/roboto.regular"
                                android:textColor="@color/color_878787" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:gravity="center"
                                android:text=":"
                                android:textSize="14sp"
                                android:textColor="@color/text_lightgray" />

                            <TextView
                                android:id="@+id/txv_discount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:textAppearance="@style/roboto.regular"
                                android:textSize="14sp"
                                android:textColor="@color/colorTextGrey" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:text="Change"
                                android:paddingStart="5dp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingEnd="5dp"
                                android:textSize="14sp"
                                android:textAppearance="@style/roboto.regular"
                                android:textColor="@color/color_878787" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:gravity="center"
                                android:text=":"
                                android:textSize="14sp"
                                android:textColor="@color/text_lightgray" />

                            <TextView
                                android:id="@+id/txv_change"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:textSize="14sp"
                                android:textAppearance="@style/roboto.regular"
                                android:textColor="@color/colorTextGrey" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/nointernetconnection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite"
        android:visibility="gone">


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/nointernet" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView1"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="30dp"
            android:text="Opps! It looks like you're not connected. Please check your internet connection."
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/refreshnointernet"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/textView2"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:src="@drawable/refresh4" />

        <ImageView
            android:id="@+id/refreshdisabled1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/textView2"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:src="@drawable/refreshdisabled"
            android:visibility="gone" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="8dp"
            android:src="@drawable/logowatermark" />
    </RelativeLayout>


</LinearLayout>
