<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitePrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<!--    <LinearLayout-->
<!--        android:id="@+id/qrHeadline"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:gravity="center_horizontal">-->

    <ImageView
        android:id="@+id/qrImgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_weight="1"
        android:paddingRight="10dp"
        android:focusable="true"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:text="To consume, scan the QR CODE below"
        android:textStyle="bold"
        android:layout_weight="1" />





<!--    </LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qrcodegenerate"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_baseline_qr_code_24" />
        <ProgressBar
            android:id="@+id/progressCirular"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:paddingRight="150dp"
            android:indeterminate="true"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="horizontal">

<!--        <Button-->
<!--            android:id="@+id/btnGenerateQrCode"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textColor="@color/coopassist_blue"-->
<!--            android:layout_marginTop="170dp"-->
<!--            android:textSize="18sp"-->
<!--            android:backgroundTint="@color/whitePrimary"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:drawableLeft="@drawable/qrimage"-->
<!--            android:text="Generate New QR Code"/>-->

        <TextView
            android:id="@+id/btnGenerateQrCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:layout_marginTop="150dp"
            android:textSize="20sp"
            android:text="  Generate new QR code"
            android:drawableLeft="@drawable/qrimage"
            android:textColor="@color/coopassist_blue"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>