<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"

    app:cardBackgroundColor="@color/whitePrimary"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="25dp">

        <ImageView
            android:id="@+id/gknp_imgv"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="4.5"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:text="GK Negosyo"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/buttons"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gknp_tv_pckgnme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:textAllCaps="true"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gknp_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:textAllCaps="true"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/buttons"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_gk_blue_button_rounded_sides"
                android:elevation="2dp"
                android:layout_marginBottom="10dp"
                android:text="SUBSCRIBE"
                android:textAllCaps="true"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/whitePrimary"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>