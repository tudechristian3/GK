package com.goodkredit.myapplication.utilities;

import android.util.Log;

import static com.goodkredit.myapplication.common.CommonVariables.isDebugMode;

public class Logger {

    public static void info(String tag, String string) {
        if (isDebugMode) Log.i(tag, string);
    }
    public static void error(String tag, String string) {
        if (isDebugMode) Log.e(tag, string);
    }
    public static void debug(String tag, String string) {
        if (isDebugMode)Log.d(tag, string);
    }
    public static void verbose(String tag, String string) {
        if (isDebugMode) Log.v(tag, string);
    }
    public static void warning(String tag, String string) {
        if (isDebugMode) Log.w(tag, string);
    }

}
