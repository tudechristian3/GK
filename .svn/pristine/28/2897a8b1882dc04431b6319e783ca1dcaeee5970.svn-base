<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/txv_subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Theology 1"
            android:layout_weight="1"
            android:textAppearance="@style/roboto.regular"
            android:textColor="@color/color_8B8B8B"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            />

        <TextView
            android:id="@+id/txv_student_examterm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Prelims"
            android:layout_weight="1"
            android:textAppearance="@style/roboto.regular"
            android:textColor="@color/color_535354"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/txv_student_grade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1.5"
            android:layout_weight="0.8"
            android:gravity="start"
            android:textAppearance="@style/roboto.regular"
            android:textColor="@color/color_35B2E6"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            />

    </LinearLayout>

</LinearLayout>