<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_refer_a_friend"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/refer_a_friend2" />

            <TextView
                android:id="@+id/lbl_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REFERRAL CODE"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/colorwhite"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_border_radius_v"
                android:gravity="center"
                android:minWidth="200dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/colorwhite"
                android:visibility="gone" />

            <TextView
                android:id="@+id/btn_customize_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/referafriendcustom"
                android:textColor="@color/colorwhite"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textAppearance="@style/roboto.regular"
                android:textColor="@color/colorwhite"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp" />


            <TextView
                android:id="@+id/btn_refer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_radius"
                android:elevation="4dp"
                android:gravity="center"
                android:minWidth="180dp"
                android:padding="10dp"
                android:text="SHARE"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/buttons"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/err_conn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/logowatermark" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="top"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/refer_a_friend2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="There's a connection problem. Please refresh page and try again."
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/whitePrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/btn_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_radius"
                android:elevation="4dp"
                android:gravity="center"
                android:minWidth="180dp"
                android:padding="10dp"
                android:text="REFRESH"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/buttons"
                android:textSize="18sp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>