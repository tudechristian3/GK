<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_box_silver"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imv_logo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/emptylogdefault" />

            <TextView
                android:id="@+id/txv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/color_183842"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:textColor="@color/color_5F6262"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txv_votecloses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:ellipsize="end"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:textColor="@color/color_5F6262"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_castvotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_castvotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/votes_action_button"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="CAST YOUR VOTE"
                android:textAppearance="@style/roboto.bold"
                android:textColor="@color/colorwhite"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>