<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/grey_35"
    android:padding="@dimen/padding_10"
    android:layout_margin="@dimen/padding_10">

    <TextView
        android:id="@+id/item_replenish_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/quantum_black_100"
        android:textStyle="bold"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingRight="@dimen/_15sdp"
        android:paddingLeft="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/item_replenish_preAvailCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_replenish_postAvailCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5">
            <TextView
                android:id="@+id/item_replenish_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="end"
                android:textColor="@color/quantum_black_text"/>

            <TextView
                android:id="@+id/item_replenish_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/quantum_black_text"
                android:gravity="end"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>